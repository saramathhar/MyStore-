@page
@model myStoreWeb.Pages.Product.AddModel
@{
}


<br>
<h2>Add new item </h2>

@if (Model.errorMsg.Length > 0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMsg</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="POST">
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Name</label>
    <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.Product.name">
    </div>
</div>
<div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="price" value="@Model.Product.price">
        </div>
</div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Category_id" value="@Model.Product.Category_id">
        </div>
    </div>

@if(Model.successMsg.Length > 0){
    <div class="row mb-3">
        <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
            <strong>@Model.successMsg</strong>
            <button type ='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
       </div>
        </div>
    </div>
}


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-online-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>